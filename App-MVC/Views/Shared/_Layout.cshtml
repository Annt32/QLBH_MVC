<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App_MVC.styles.css" asp-append-version="true" />
</head>
<body>
    @using System.Security.Claims
    @inject IHttpContextAccessor HttpContextAccessor

    @{
        var isAuthenticated = HttpContextAccessor.HttpContext.Session.GetString("user") != null;
        var role = HttpContextAccessor.HttpContext.Session.GetString("role");
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">App_MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{

                        if (isAuthenticated)
                        {
                            if (role == "Admin")
                            {
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Hiện thị ra User</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="SanPhamIndex">Hiện thị ra SanPham</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="ThongKeViewModel" asp-action="Index">Thống Kê</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="HoaDonViewModel" asp-action="ShowHoaDon">Thanh Toán</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="GioHangViewModel" asp-action="Index">Giỏ Hàng</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Đăng Xuất</a>
                                    </li>
                                </ul>
                                
                            }
                            else if (role == "User")
                            {
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="SanPhamIndex">Sản Phẩm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="ThongKeViewModel" asp-action="Index">Thống Kê</a>
                                    </li>
                                </ul>
                               
                                
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="HoaDonViewModel" asp-action="ShowHoaDon">Thanh Toán</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="GioHangViewModel" asp-action="Index">Giỏ Hàng</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav flex-grow-3">
                                    <li class="nav-item justify-content-md-end">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Đăng Xuất</a>
                                    </li>
                                </ul>
                                // Người dùng có vai trò User
                            }                                                                             
                        } else
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="SanPhamIndex">Sản Phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ThongKeViewModel" asp-action="Index">Thống Kê</a>
                                </li>
                            </ul>

                            
                            <ul class="navbar-nav flex-grow-3">
                                <li class="nav-item justify-content-md-end">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="HoaDonViewModel" asp-action="ShowHoaDon">Thanh Toán</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav flex-grow-3">
                                <li class="nav-item justify-content-md-end">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="GioHangViewModel" asp-action="Index">Giỏ Hàng</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav flex-grow-3">
                                <li class="nav-item justify-content-md-end">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Đăng nhập</a>
                                </li>
                            </ul>
                        }
                    }                  
                    
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright 2024 by Nguyễn Trương An - AnntPH34131 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
